<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_size_medium"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/advance_no_dialog"
            style="@style/TextViewDialogStyle" />

        <TextView
            android:id="@+id/job_no_dialog"
            style="@style/TextViewDialogStyle" />

        <TextView
            android:id="@+id/advance_date_dialog"
            style="@style/TextViewDialogStyle" />

        <TextView
            android:id="@+id/advance_total_dialog"
            style="@style/TextViewDialogStyle" />

        <TextView
            android:id="@+id/advance_status_dialog"
            style="@style/TextViewDialogStyle" />

        <TextView
            android:id="@+id/advance_approve_date_dialog"
            style="@style/TextViewDialogStyle"
            android:visibility="gone" />

        <TextView
            android:id="@+id/advance_approve_by_dialog"
            style="@style/TextViewDialogStyle"
            android:visibility="gone" />

        <TextView
            android:id="@+id/advance_cancel_by_dialog"
            style="@style/TextViewDialogStyle"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>


