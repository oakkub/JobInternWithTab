<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/noDataCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/small_radius"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/spacing_size_tiny">

    <TextView
        android:id="@+id/noDataCardViewTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_size_small"
        android:freezesText="true"
        android:gravity="center"
        android:text="@string/endOfResult"
        android:textSize="@dimen/font_medium"
        android:visibility="gone" />

</android.support.v7.widget.CardView>



