<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="?attr/colorPrimaryDark"
    tools:context="com.example.oakkub.jobintern.Fragments.LoginActivityFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginTextView"
        android:text="Login"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/usernameTextInputLayout"
        android:layout_below="@+id/loginTextView"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_login_shape">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usernameEditText"
            android:hint="Username"
            android:textColorHint="?attr/colorAccent"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:singleLine="true"
            android:inputType="text"
            android:maxLength="20"
            android:digits="QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm0123456789._-"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordTextInputLayout"
        android:layout_below="@+id/usernameTextInputLayout"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_login_shape">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passwordEditText"
            android:hint="Password"
            android:textColorHint="?attr/colorAccent"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:singleLine="true"
            android:maxLength="30"
            android:inputType="textPassword" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginButton"
        android:layout_below="@+id/passwordTextInputLayout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector_login_button_shape"
        android:text="Login"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAllCaps="false"/>

</RelativeLayout>
