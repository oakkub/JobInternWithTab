<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="MyProgressDialog" parent="Theme.AppCompat.Dialog">

        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>

    </style>

    <style name="CardViewButton" parent="Base.Widget.AppCompat.Button">

        <item name="android:layout_width">@dimen/card_view_button_width</item>
        <item name="android:layout_height">@dimen/card_view_button_height</item>
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:layout_marginEnd">7dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>

    </style>

</resources>
